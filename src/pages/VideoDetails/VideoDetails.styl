
.page-vidoe{
  position fixed;
  left 0;
  top 0;
  z-index 3000;
  width 100%;
  height 100%;
  background-color rgba(0,0,0,1);
  .title-close{
    position absolute;
    left 0;
    top 0;
    z-index 1000;
    display flex;
    align-items center;
    width 100%;
    height 50px;
    background-color rgba(0,0,0,1);
    .back{
      display flex;
      align-items center;
      justify-content center;
      width 50px;
      height 50px;
      span{
        width 14px;
        height 14px;
        border-left 2px solid #ffffff;
        border-bottom 2px solid #ffffff;
        transform rotate(45deg);
      }
    }
    .title{
      display flex;
      align-items center;
      width 100%;
      height 100%;
      font-size 14px;
      color #ffffff;
      line-height 20px;
      padding 5px 10px;
    }
    .close{
      position absolute;
      right 20px;
      top 18px;
      font-size 20px;
      color #ffffff;
    }
  }
  video{
    width 100%;
    height 100%
  }
  /*控件*/
  .control{
    opacity 0;
    position absolute;
    bottom 0;
    left 0;
    z-index 1000;
    width 100%;
    height 60px;
    background-color rgba(0,0,0,1);
    transition all 0.5s;
    // 进度条
    .progress-bar{
      width 100%
      height 4px;
      background-color #9c9ea5;
      .bar{
        width 0%;
        height 100%;
        background-color base;
        transition all 0.2s;
      }
    }
    // 播放更多区
    .play-more{
      display flex;
      align-items center;
      justify-content space-between;
      padding 0 20px;
      height 50px;
      margin-top 6px;
      cursor pointer;
      .play{
        display flex;
        align-items center;
        height 100%;
        .icon{
          font-size 20px;
          color #9c9ea5;
          margin-right 10px;
        }
        .time{
          font-size 14px;
          color #9c9ea5;
          margin-left 10px;
          i{
            color #ffffff;
            font-style normal;
          }
        }
      }
      .more{
        display flex;
        align-items center;
        height 100%;
        .speed{
          position relative;
          display flex;
          align-items center;
          cursor pointer;
          span{
            font-size 14px;
            color #9c9ea5;
          }
          .speed-list{
            position absolute;
            bottom 60px;
            left -100px;
            width 150px;
            background-color rgba(0,0,0,0.5);
            border-radius 5px;
            .list{
              width 100%;
              height 40px;
              font-size 14px;
              line-height 40px;
              text-align center;
              color #ffffff;
            }
          }
        }
        .icon{
          font-size 20px;
          color #9c9ea5;
          margin-left 20px;
          cursor pointer;
        }
      }
    }
  }
}

.page-vidoe:hover{
  .control{
    opacity 1;
  }
}
  .loading{
    position fixed;
    left 0;
    top 0;
    display flex;
    align-items center;
    justify-content center;
    width 100%;
    height 100%;
    background-color rgba(0,0,0,0.3);
    span{
      font-size 72px;
      color #ffffff;
    }
  }
