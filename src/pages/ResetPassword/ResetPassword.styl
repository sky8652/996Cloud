.page{
  position absolute;
  left 0;
  top 0;
  width 100%;
  height 100%;
  background linear-gradient(#409eff,#72b7ff);
}
.main{
  width 300px;
  height 100%;
  margin 0 auto;
  .logo{
    display flex;
    justify-content center;
    align-items flex-end;
    width 100%;
    height 40%;
    img{
      width 140px;
      height 140px;
    }
  }
  .logo-claim{
    display flex;
    align-items center;
    justify-content center;
    width 100%;
    height 10%;
    color #ffffff;
  }
  .login-area{
    width 100%;
    height 30%;
    .login-input{
      width 100%;
      height 200px;
      background-color #ffffff;
      border-radius 6px;
      margin-bottom 20px;
      overflow hidden;
      input{
        width 100%;
        height 25%;
        box-sizing border-box;
        border-bottom 1px solid #eeeeee;
        padding 0 4%;
      }
    }
  }
  .copyright{
    display flex;
    align-items flex-end;
    justify-content center;
    width 100%;
    height 18%;
    font-size 14px;
    color #ffffff;
    padding-bottom 20px;
  }
}
