/****************颜色class**********************/
// 基础背景色
.base-bg{
  background-color: base;
}
// 基础文字色
.base-color{
  color: base;
}
// 基础边框色
.base-br{
  border-color: base;
}
// 基础背景透明度
.base-bg-rg01{
  background-color rgba01;
}
.base-bg-rg02{
  background-color rgba02;
}
.base-bg-rg03{
  background-color rgba03;
}
.base-bg-rg04{
  background-color rgba04;
}
.base-bg-rg05{
  background-color rgba05;
}
.base-bg-rg06{
  background-color rgba06;
}
.base-bg-rg07{
  background-color rgba07;
}
.base-bg-rg08{
