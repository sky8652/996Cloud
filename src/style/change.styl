// 辅色背景色
.assist-bg{
  background-color: assist-clor;
}
// 辅色文字色
.assist-color{
  color: assist-clor;
}
// 渐变背景色
.gradual-bg{
  background linear-gradient(to right,change-clor,base);
}
// 渐变文字色
.gradual-color{
  content: attr(text);
  position: relative;
  z-index: 10;
  color:base;
  -webkit-mask:linear-gradient(to bottom, change-clor, rgba(0,0,0,0.8));
}
